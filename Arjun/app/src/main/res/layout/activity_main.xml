<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Birthday"
        android:layout_marginTop="158dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:textColor="#0288D1"/>

    <TextView
        android:id="@+id/name"
        android:layout_below="@id/wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arjun"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:textColor="#0288D1"/>

    <ImageView
        android:id="@+id/img"
        android:layout_below="@id/name"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arjun"/>

    <TextView
        android:id="@+id/msg1"
        android:layout_below="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Wishing you Joy and"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#0288D1"/>

    <TextView
        android:id="@+id/msg2"
        android:layout_below="@id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Happiness in Life!"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#0288D1"/>

    <TextView
        android:id="@+id/msg3"
        android:layout_below="@id/msg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Have a Great Day!"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="#0288D1"/>


</RelativeLayout>