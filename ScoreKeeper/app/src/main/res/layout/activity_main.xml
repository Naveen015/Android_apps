<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Fifa World Cup"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4DD0E1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:src="@drawable/fcb" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="3.4"
                android:text="FC Barcelona"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:src="@drawable/vs" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="16dp"
                android:layout_weight="3"
                android:text="Real Madrid"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/realmadrid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/goalA"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:onClick="t_a_g"
                    android:text="Goal" />

                <TextView
                    android:id="@+id/tga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:text="0"
                    android:textColor="#0277BD"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/foulA"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goalA"
                    android:layout_marginTop="16dp"
                    android:onClick="t_a_f"
                    android:text="Foul" />

                <TextView
                    android:id="@+id/tfa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/goalA"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/penaltyA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foulA"
                    android:layout_marginTop="16dp"
                    android:onClick="t_a_p"
                    android:text="Penalty" />

                <TextView
                    android:id="@+id/tpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/foulA"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/saveA"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penaltyA"
                    android:layout_marginTop="16dp"
                    android:onClick="t_a_s"
                    android:text="Saves" />

                <TextView
                    android:id="@+id/tsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/penaltyA"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#4DD0E1">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/goalB"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:onClick="t_b_g"
                    android:text="Goal" />

                <TextView
                    android:id="@+id/tgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22dp"
                    android:text="0"
                    android:textColor="#0277BD"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/foulB"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/goalB"
                    android:layout_marginTop="16dp"
                    android:onClick="t_b_f"
                    android:text="Fouls" />

                <TextView
                    android:id="@+id/tfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goalB"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/penaltyB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/foulB"
                    android:layout_marginTop="16dp"
                    android:onClick="t_b_p"
                    android:text="Penalty" />

                <TextView
                    android:id="@+id/tpb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/foulB"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/saveB"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/penaltyB"
                    android:layout_marginTop="16dp"
                    android:onClick="t_b_s"
                    android:text="Saves" />

                <TextView
                    android:id="@+id/tsb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penaltyB"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="24dp"
                    android:text="0"
                    android:textSize="22sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="#0277BD"
        android:onClick="reset"
        android:text="Reset"
        android:textColor="#ffffff" />
</RelativeLayout>

