<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Quiz"
            android:textColor="#7B1FA2"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/opt_a"
            android:layout_below="@id/question"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:text="A"
            android:layout_marginTop="16dp"
            android:onClick="buttonA"
            android:background="@drawable/button_custom"/>

        <TextView
            android:id="@+id/opt_a_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opt_a"
            android:layout_alignBottom="@id/opt_a"
            android:layout_alignTop="@id/opt_a"
            android:layout_margin="8dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/opt_b"
            android:layout_below="@id/opt_a"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:text="B"
            android:layout_marginTop="16dp"
            android:onClick="buttonB"
            android:background="@drawable/button_custom"/>

        <TextView
            android:id="@+id/opt_b_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opt_b"
            android:layout_alignBottom="@id/opt_b"
            android:layout_alignTop="@id/opt_b"
            android:layout_margin="8dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/opt_c"
            android:layout_below="@id/opt_b"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:text="C"
            android:layout_marginTop="16dp"
            android:onClick="buttonC"
            android:background="@drawable/button_custom"/>

        <TextView
            android:id="@+id/opt_c_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opt_c"
            android:layout_alignBottom="@id/opt_c"
            android:layout_alignTop="@id/opt_c"
            android:layout_margin="8dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/opt_d"
            android:layout_below="@id/opt_c"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:text="D"
            android:layout_marginTop="16dp"
            android:onClick="buttonD"
            android:background="@drawable/button_custom"/>

        <TextView
            android:id="@+id/opt_d_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/opt_d"
            android:layout_alignBottom="@id/opt_d"
            android:layout_alignTop="@id/opt_d"
            android:layout_margin="8dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/score"
            android:layout_below="@id/opt_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="0/5"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="#7B1FA2"/>

        <Button
            android:layout_below="@id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reset"
            android:layout_centerHorizontal="true"
            android:onClick="reset"
            android:background="@drawable/button_custom"
            />

    </RelativeLayout>
</ScrollView>